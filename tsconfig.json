{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "commonjs",
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ]
}
